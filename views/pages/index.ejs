<!doctype html>
<html lang="en">
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<title>TAO' Newsletter Tracker</title>
		<link rel="stylesheet" type="text/css" href="main.css">
	</head>
	<body>
		<header><img src="taologo.png" /></header>

		<!-- File Upload -->
		<label>
			<form id="file-upload-form" action="/upload" method="POST" enctype="multipart/form-data">
				<input type="file" id="file-input" name="nlfile" />
				<input type="submit" />
			</form>
		</label>

		<!-- Filters -->
		<div id="filters">
			<input type="date" id="filter-date" />
			<select id="filter-brand">
				<option value="">---</option>
				<% brands.forEach(function(brand) {
				%>
					<option value="<%= brand.id %>"><%= brand.name %></option>
				<% }); %>
		 	</select>
			<select id="filter-category">
				<option value="">---</option>
				<% categories.forEach(function(cat) {
				%>
					<option value="<%= cat.id %>"><%= cat.name %></option>
				<% }); %>
			</select>
			<select id="filter-list-style">
				<option selected value="list">List</option>
				<option value="grid">Grid</option>
			</select>
		</div>

		<!-- Newsletters -->
		<div id="main-content">
			<ul id="newsletter-list" class="list">
				<% newsletters.forEach(function(newsletter) {
					var imgLink = newsletter.screenshotLink;
				%>
					<li class="newsletter">
							<a class="capture" href="<%= imgLink %>"><span style="background-image: url(<%= imgLink %>)"></span></a>
							<div class="info">
								<p class="name"><%= newsletter.brand %></p>
								<p class="details"><span><%= newsletter.date %></span> - <span><%= newsletter.category %></span>
								<p class="subject"><%=newsletter.subject %></p>
								<p class="link"><a href="<%= newsletter.onlineVersionLink %>">Voir la version en ligne >></a></p>
							</div>
					</li>
				<% }); %>
			</ul>
		</div>
		<script src="bundle.js"></script>
	</body>
</html>
