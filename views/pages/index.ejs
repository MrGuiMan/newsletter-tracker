<!doctype html>
<html lang="en">
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<title>TAO' Newsletter Tracker</title>
		<link rel="stylesheet" type="text/css" href="main.css">
		<script>
			window.data = {
				brands: <%- JSON.stringify(brands) %>,
				categories: <%- JSON.stringify(categories) %>
			}
		</script>
	</head>
	<body>
		<header><img src="taologo.png" /></header>

		<!-- File Upload -->
		<label>
			<form id="file-upload-form" action="/upload" method="POST" enctype="multipart/form-data">
				<input type="file" id="file-input" name="nlfile" />
				<input type="submit" />
			</form>
		</label>

		<!-- Filters -->
		<% include ../partials/filters %>

		<!-- Paging -->
		<% include ../partials/paging %>

		<!-- Newsletters -->
		<div id="main-content">
			<ul id="newsletter-list" class="grid"></ul>
		</div>
		<script src="bundle.js"></script>
	</body>
</html>
