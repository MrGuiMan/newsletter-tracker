<div class="filters-wrapper">
	<div id="filters">
		<!-- Date Filter -->
		<select class="filter" id="filter-date">
			<option data-month="" data-year="" value="">---</option>
			<% months.forEach(function(month) { %>
				<option data-month="<%= month.month %>" data-year="<%= month.year %>" value="<%= month.id %>">
					<%= month.monthLabel + ' ' + month.year %>
				</option>
			<% }); %>
		</select>

		<!-- Brands Filter -->
		<select class="filter" id="filter-brand">
			<option value="">---</option>
			<% brands.forEach(function(brand) { %>
				<option value="<%= brand.id %>"><%= brand.name %></option>
			<% }); %>
		</select>

		<!-- Category Filter -->
		<select class="filter" id="filter-category">
			<option value="">---</option>
			<% categories.forEach(function(cat) { %>
				<option value="<%= cat.id %>"><%= cat.name %></option>
			<% }); %>
		</select>

		<!-- Theme Filter -->
		<select class="filter" id="filter-theme">
			<option value="">---</option>
			<% themes.forEach(function(theme) { %>
				<option value="<%= theme.id %>"><%= theme.name %></option>
			<% }); %>
		</select>

		<!--
		<select class="filter" id="filter-list-style">
			<option selected value="list">List</option>
			<option value="grid">Grid</option>
		</select>
		-->
	</div>
</div>
